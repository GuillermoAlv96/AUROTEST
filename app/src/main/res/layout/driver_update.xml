<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activities.Driver.ui.activities.DriverUpdate">


    <ImageView
        android:id="@+id/imageViewDriverUpdate"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="16dp"
        android:text="Accept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPhoneUpdate" />

    <EditText
        android:id="@+id/editTextSexUpdate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/buttonUpdate"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailUpdate"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailUpdate" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="NAME"
        app:layout_constraintBottom_toTopOf="@+id/editTextFirstNameUpdate"
        app:layout_constraintStart_toStartOf="@+id/editTextFirstNameUpdate" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:text="EMAIL"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmailUpdate"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailUpdate" />

    <EditText
        android:id="@+id/editTextLastNameUpdate"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDriverUpdate" />

    <EditText
        android:id="@+id/editTextPhoneUpdate"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="number|textPersonName|text|textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLastNameUpdate" />

    <EditText
        android:id="@+id/editTextEmailUpdate"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/editTextPhoneUpdate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextFirstNameUpdate"
        app:layout_constraintTop_toBottomOf="@+id/editTextFirstNameUpdate" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="LAST NAME"
        app:layout_constraintBottom_toTopOf="@+id/editTextLastNameUpdate"
        app:layout_constraintStart_toStartOf="@+id/editTextLastNameUpdate" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="4dp"
        android:text="PHONE"
        app:layout_constraintBottom_toTopOf="@+id/editTextPhoneUpdate"
        app:layout_constraintStart_toStartOf="@+id/editTextPhoneUpdate" />

    <EditText
        android:id="@+id/editTextFirstNameUpdate"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/editTextLastNameUpdate"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDriverUpdate" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:text="SEX"
        app:layout_constraintBottom_toTopOf="@+id/editTextSexUpdate"
        app:layout_constraintStart_toStartOf="@+id/editTextSexUpdate" />

</androidx.constraintlayout.widget.ConstraintLayout>
